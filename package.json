{
  "name": "tcd-coder",
  "displayName": "TCD Coder Helper",
  "description": "Easier management of coding examples and assessment for TCD students",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "availableRepositories.clone",
        "title": "Clone Repository",
        "icon": {
          "light": "resources/light/repo-clone.svg",
          "dark": "resources/dark/repo-clone.svg"
        },
        "when": "view == availableRepositories && viewItem == availableRepository"
      }
    ],    
    "menus": {
      "view/item/context": [
        {
          "command": "availableRepositories.clone",
          "when": "view == availableRepositories && viewItem == availableRepository",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repository-directory",
          "title": "Repository Directory",
          "icon": "resources/dep.svg"
        }
      ]
    },
    "views": {
      "repository-directory": [
        {
          "id": "clonedRepositories",
          "name": "Cloned Repositories",
          "icon": "resources/dep.svg",
          "contextualTitle": "Repository Directory",
          "type": "tree"
        },
        {
          "id": "availableRepositories",
          "name": "Available Repositories",
          "icon": "resources/dep.svg",
          "contextualTitle": "Repository Directory",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "availableRepositories",
        "contents": "No repos available"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
