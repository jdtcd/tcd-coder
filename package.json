{
  "name": "tcd-coder",
  "displayName": "TCD Coder Helper",
  "description": "Easier management of coding examples and assessment for TCD students",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "availableProjects.getProject",
        "title": "Get Project",
        "icon": {
          "light": "resources/light/repo-clone.svg",
          "dark": "resources/dark/repo-clone.svg"
        },
        "when": "view == availableProjects && viewItem == availableProject"
      }
    ],    
    "menus": {
      "view/item/context": [
        {
          "command": "availableProjects.getProject",
          "when": "view == availableProjects && viewItem == availableProject",
          "group": "inline"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "myProjects",
          "name": "My Projects",
          "icon": "resources/dep.svg",
          "type": "tree",
          "order": 1
        },
        {
          "id": "availableProjects",
          "name": "Available Projects",
          "icon": "resources/dep.svg",
          "type": "tree",
          "order": 2
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "availableProjects",
        "contents": "No project sources available. Add a project source."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
